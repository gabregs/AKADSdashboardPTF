<!-- Account Details -->
  <section class="colored-section" id="acctdetails">
    <div class="container-fluid container-padbot">
      <h1 class="acctdetails-header">Account Details</h1>
      <%- include('partials/messages'); %>
      <form action="/users/register" method="POST">
        <div class="row form-group">
            <div class="col-lg-6">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <small id="emailHelp" class="form-text text-muted">*We'll never share your email with anyone else.</small>
        </div>
        <div class="row form-group">
            <div class="col-lg-6">
                <input
                    type="name"
                    id="fname"
                    name="fname"
                    class="form-control"
                    placeholder="Enter First Name"
                    value="<%= typeof fname != 'undefined' ? fname : '' %>"
                />
            </div>
            <div class="col-lg-6">
            <input
              type="name"
              id="lname"
              name="lname"
              class="form-control"
              placeholder="Enter Last Name"
              value="<%= typeof lname != 'undefined' ? lname : '' %>"
            />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-6">
                <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Create Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="col-lg-6">
                <input
                type="password"
                id="password2"
                name="password2"
                class="form-control"
                placeholder="Confirm Password"
                value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
          </div>   
        <button type="submit" class="btn btn-primary">Submit </button>
      </form>
    </div>
    </section>

